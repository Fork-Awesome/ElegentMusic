{
    "manifest_version": 2,
    "name": "优雅音乐",
    "version": "1.0",
    "description": "优雅的听音乐",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "我的音乐",
        "default_popup": "popup.html"
    },
    "permissions": [
        "unlimitedStorage",
        "storage",
        "contextMenus",
        "tabs",
        "*://music.163.com/*",
        "*://*.xiami.com/*"
    ],
    "background": {
        "scripts": [
            "js/jquery.js",
            "js/background.js"
        ],
        "presistent": true
    },
    "web_accessible_resources": [
        "neteaseAddList.html"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://music.163.com/*"
            ],
            "js": [
                "js/jquery.js",
                "js/neteasePlayer.js"
            ]
        },
        {
            "matches": [
                "http://www.xiami.com/play*"
            ],
            "js": [
                "js/xiamiPlayer.js"
            ]
        }
    ]
}